.menu-wrapper {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 300px;
  height: 100%;
  padding: 30px;
  background-color: #444444;
  box-sizing: border-box;
  transition: all 0.2s linear;
}
.menu-wrapper:hover .menu-hidden {
  opacity: 0.6;
}
.menu-wrapper .menu-hidden {
  position: absolute;
  z-index: 2;
  right: -30px;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30px;
  height: 60px;
  margin: auto;
  background-color: #aaaaaa;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
  color: white;
  opacity: 0;
  font-size: 32px;
  cursor: pointer;
}
.menu-wrapper .menu-hidden:hover {
  opacity: 1;
}
.menu-wrapper .menu-item {
  position: relative;
  width: 106px;
  height: 66px;
  box-sizing: border-box;
  cursor: pointer;
}
.menu-wrapper .menu-item .menu-item-content {
  position: absolute;
  z-index: 3;
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
  width: 100px;
  height: 60px;
  background: black;
  border-radius: 4px;
  box-sizing: border-box;
}
.menu-wrapper .menu-item .menu-item-content:hover {
  border: 3px dashed white;
}
.menu-wrapper .menu-item .menu-icon {
  display: flex;
  align-content: center;
  justify-content: center;
  color: white;
  font-size: 20px;
}
.menu-wrapper .menu-item .menu-name {
  display: flex;
  align-content: center;
  justify-content: center;
  margin-top: 4px;
  font-size: 12px;
}
